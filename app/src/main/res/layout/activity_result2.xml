<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/abidjan2"
    android:id="@+id/navigation_drawer_layout"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    tools:context="com.ezesky.likaa.Bus.ResultActivity">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/md_orange_300"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            />


    </RelativeLayout>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"



        >


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:paddingBottom="16dp"


             >








            <TextView
                android:id="@+id/lib_woro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:text="Lib_woro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:background="@color/md_grey_500_25"

                />

            <TextView
                android:id="@+id/allant_de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="allant de"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lib_woro"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                />

            <TextView
                android:id="@+id/depart_woro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="départ"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lib_woro"
                android:layout_toRightOf="@+id/allant_de"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/md_grey_500_25"

                />

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="à"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/depart_woro"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                />




            <TextView
                android:id="@+id/terminus_woro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="terminus"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/depart_woro"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/allant_de"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/md_grey_500_25"
                />


            <TextView
                android:id="@+id/lib_detail_woro"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/terminus_woro"
                android:layout_marginTop="20dp"
                android:text="Lieux où passe le taxi"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/md_grey_500_50"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_centerHorizontal="true"

                />


            <TextView
                android:id="@+id/detail_woro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lib_detail_woro"
                android:layout_marginTop="20dp"
                android:text="Detail"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/md_orange_500_50"
                />


            <TextView
                android:layout_width="100dp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:id="@+id/lib_typ"
                android:layout_below="@+id/detail_woro"
                android:layout_marginTop="10dp"
                android:text="Type de taxi :"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/type_woro"
                android:layout_below="@+id/detail_woro"
                android:layout_marginTop="10dp"
                android:text="type woro"
                android:layout_toRightOf="@+id/lib_typ"
                android:layout_marginLeft="10dp"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/md_orange_500_50"
                />



            <TextView
                android:layout_width="100dp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:id="@+id/lib_pr"
                android:layout_below="@+id/type_woro"
                android:layout_marginTop="10dp"
                android:text="Prix :"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/prix_woro"
                android:layout_below="@+id/type_woro"
                android:layout_marginTop="10dp"
                android:text="prix woro"
                android:layout_toRightOf="@+id/lib_pr"
                android:layout_marginLeft="10dp"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/md_orange_500_50"
                />




        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:menu="@menu/navigation_drawer_menu_bus"
        android:theme="@style/NavigationViewTheme_Bus" />


</androidx.drawerlayout.widget.DrawerLayout>
