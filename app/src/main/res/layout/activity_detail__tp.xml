<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infobus_sans_sotra"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    tools:context="com.ezesky.likaa.Bus.Detail_TpActivity">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/md_grey_500_25"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp" >


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:paddingBottom="16dp"


            >


            <Button
                android:id="@+id/btn_prec"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"

                android:onClick="Prec_Click"
                android:text="prec" />

            <Button
                android:id="@+id/btn_suiv"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:onClick="Suiv_Click"

                android:text="suiv" />

            <TextView
                android:id="@+id/lib_woro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:background="@color/md_grey_500_25"
                android:gravity="center_horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="Lib_woro"

                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/allant_de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lib_woro"

                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="allant de"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/depart_woro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lib_woro"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/allant_de"
                android:background="@color/md_grey_500_25"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="départ"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/depart_woro"

                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="à"
                android:textSize="20dp"

                />


            <TextView
                android:id="@+id/terminus_woro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/depart_woro"

                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/allant_de"
                android:background="@color/md_grey_500_25"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="terminus"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/lib_detail_woro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/terminus_woro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/md_grey_500_50"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"

                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="Lieux où passe le taxi"
                android:textSize="20sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/detail_woro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lib_detail_woro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:background="@color/md_orange_500_50"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="Detail" />


            <TextView
                android:id="@+id/lib_typ"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/detail_woro"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"

                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:text="Type de taxi :"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/type_woro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/detail_woro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/lib_typ"
                android:background="@color/md_orange_500_50"

                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="type woro" />


            <TextView
                android:id="@+id/lib_pr"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/type_woro"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"

                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:text="Prix :"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/prix_woro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/type_woro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/lib_pr"
                android:background="@color/md_orange_500_50"

                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="prix woro" />


        </RelativeLayout>
    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>
